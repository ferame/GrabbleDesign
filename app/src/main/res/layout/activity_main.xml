<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.code.justin.grabbledesign.MainActivity">

    <Button
        android:text="GO TO CHANGE PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toChangePassActivity"
        android:id="@+id/toChangePass"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Go to account creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toCreateAccount"
        android:onClick="toCreateAccountActivity"
        android:layout_below="@+id/toChangePass"
        android:layout_alignParentStart="true" />

    <Button
        android:text="GO TO WORD INPUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toWordInputActivity"
        android:id="@+id/toWordInput"
        android:layout_below="@+id/toCreateAccount"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Go to Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toLogin"
        android:onClick="toLoginActivity"
        android:layout_below="@+id/toWordInput"
        android:layout_alignParentStart="true" />

    <Button
        android:text="GO TO RECOVERY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toRecoveryActivity"
        android:id="@+id/toRecovery"
        android:layout_below="@+id/toMaps"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Go to Maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toMaps"
        android:onClick="toMapsActivity"
        android:layout_below="@+id/toWordInput"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <Button
        android:text="GO TO INVENTORY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toRecovery"
        android:layout_alignParentStart="true"
        android:id="@+id/toInventory"
        android:onClick="toInventoryActivity" />

    <Button
        android:text="GO TO SETTINGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toInventory"
        android:layout_alignParentStart="true"
        android:id="@+id/toSettings"
        android:onClick="toSettingsActivity" />


</RelativeLayout>
