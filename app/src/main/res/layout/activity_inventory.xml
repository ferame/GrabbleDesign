<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inventory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.code.justin.grabbledesign.InventoryActivity">

    <TextView
        android:text="INVENTORY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <LinearLayout
        android:id="@+id/inventoryVals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/inventoryTitle"
        android:layout_marginTop="16dp">
        <TextView
            android:text="WORD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="22sp"
            android:background="@color/cyan900"/>
        <TextView
            android:text="VALUE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="22sp"
            android:background="@color/teal900"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inventoryVals"
        android:layout_alignParentStart="true"
        android:id="@+id/inventoryListView"/>
    <Button
        android:id="@+id/inventoryDONE"
        android:onClick="toMapsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:background="@color/cyan"
        android:layout_alignParentBottom="true"
        android:textSize="16sp">
    </Button>
</RelativeLayout>
