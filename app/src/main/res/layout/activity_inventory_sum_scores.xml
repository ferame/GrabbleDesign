<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_to_inventory_sum_scores"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.code.justin.grabbledesign.InventorySumScores">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_and_buttons"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/inventoryActivity"
        android:onClick="toInventoryActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="◀"
        android:textSize="30dp"
        android:textColor="@color/cyan"
        android:background="@android:color/transparent"
        android:layout_weight="1" />
    <TextView
        android:text="OVERALL"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <Button
        android:id="@+id/inventoryAllPlayers"
        android:onClick="toInventoryAllPlayers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="▶"
        android:textSize="30dp"
        android:textColor="@color/cyan"
        android:background="@android:color/transparent"
        android:layout_weight="1"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/inventoryVals"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/title_and_buttons"
    android:layout_marginTop="5dp">
    <TextView
        android:text="PLAYER"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textSize="22sp"
        android:background="@color/cyan900"/>
    <TextView
        android:text="VALUE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textSize="22sp"
        android:background="@color/teal900"/>
</LinearLayout>

<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/inventoryVals"
    android:layout_alignParentStart="true"
    android:id="@+id/inventoryListView"
    android:layout_above="@+id/inventoryDONE" />
<Button
    android:id="@+id/inventoryDONE"
    android:onClick="toMapsActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="MAP"
    android:background="@color/cyan"
    android:layout_alignParentBottom="true"
    android:textSize="16sp">
</Button>
</RelativeLayout>